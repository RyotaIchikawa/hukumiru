<%= form_for(@micropost) do |f| %>

  <div class="field">
    <%= f.select :item_name,
      ["Tシャツ", "シャツ", "ポロシャツ", "ベスト", "スウェット", "パーカー",
      "ニット", "カーディガン", "タンクトップ", "キャミソール", "ジャージ",
      "ジャケット", "コート", "マウンテンパーカー", "ダウン","オールインワン",
      "ワンピース", "パンツ", "スラックス", "スカート", "スーツ", "バッグ", "シューズ", "その他"] %>
  </div>
  
  <div class="field">
    <%= f.text_field :brand_name, placeholder: "ぶらんど", :size => "17" %>
  </div>
  
  <div class="upload-btn-wrapper">
    <%= f.label :picture, "えらぶ", class: 'btn btn-primary' %>
    <%= f.file_field :picture, style: 'display: none', onChange:'inform()' %>
    <%= f.submit "とうこう", class: "btn btn-primary" %>
  </div>
  
<% end %>


<!--ファイルサイズ<5MBだと警告-->

<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('5MBいかにしてね！');
    }
  });
</script>