<% provide(:title, current_user.username + "のぷろふぃーる") %>

  <div class="row">
    <section class="col-md-3">
      <%= image_tag current_user.image, class: "thumbnail" %>
      <h2><%= @user.username %></h2>
    </section>
  </div>

  <% if @user.microposts.any? %>
    <h2>ふく (<%= @user.microposts.count %>まい)</h2>
    <div class="row">  
      <ol class="microposts">
        <% @microposts.each do |micropost| %>
        <div class="col-sm-4">
          <%= render micropost %>
        </div>
        <% end %>
      </ol>
      <%= paginate @microposts %>
    </div>      
  <% end %>