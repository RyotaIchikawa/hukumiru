<% provide(:title, current_user.username + "のぷろふぃーる") %>

<div class="container">

<div class="row">
    <section class="user_info">
      <h2><%= gravatar_for @user %></h2>
      <h2><%= @user.username %></h2>
    </section>
</div>

    <% if @user.microposts.any? %>
      <h2>ふく (<%= @user.microposts.count %>まい)</h2>
      <div class="col-md-3 col-xs-4">
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      </div>
    <% end %>

</div>