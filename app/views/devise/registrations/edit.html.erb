<% provide(:title, "へんしゅう") %>

<h2>へんしゅう</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :なまえ %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :あどれす %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :ぱすわーど %> <i>(かえたいときだけかいてね)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>↑さいてい<%= @minimum_password_length %>もじね</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :ぱすわーど（もっかい） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :いまのぱすわーど %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "こうしん！" %>
  </div>
<% end %>

<h3>このあぷりをやめる</h3>

<p>あかうんとまですてちゃうの…？ <%= button_to "すてる", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "もどる", :back %>
