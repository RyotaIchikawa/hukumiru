<% provide(:title, "とうろく") %>

<h2>とうろく</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username, "なまえ" %><br />
    <%= f.text_field :username, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "あどれす" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "ぱすわーど" %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "ぱすわーど（もっかい）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  
  <div class="field mb5">
    <%= f.label :image, "あいこん", class: 'btn btn-primary' %>
    <%= f.file_field :image, style: 'display: none' %>
  </div>
  
  <div class="actions mb2">
    <%= f.submit "とうろく！", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
