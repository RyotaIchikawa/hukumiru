<% if user_signed_in? %>
  <div class="container user_info">
    <div><%= render 'users/user_info' %></div>
    <div class="mb5"><%= link_to "これくしょん", current_user, class: "btn btn-primary" %></div>
    <hr>
    <div><%= render 'microposts/micropost_form' %></div>
  </div>
<% else %>
  <div class="top-wrapper">
    <div class="bg">
      <h1>ようふくを<br />みなおす</h1>
      <h3><i class="fas fa-tshirt"></i>ふくを　ならべて</h3>
      <h3><i class="fa fa-camera-retro"></i>しゃしんを　とって</h3>
      <h3>ぜんぶで　なんまいあるか</h3>
      <h3 class="mb2"><i class="fas fa-user-check"></i>かくにん　してみよう！</h3>
      <h3>いらない　<i class="fas fa-tshirt"></i>ふくは</h3>
      <h3 class="mb2">どんどん　<i class="fa fa-trash"></i>すててしまおう！</h3>
      <%= link_to "めざす", new_user_registration_path, class: "btn-xl btn-primary " %>
    </div>
  </div>
<% end %>